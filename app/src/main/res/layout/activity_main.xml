<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tela_inicial" />

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="333dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.522">

        <Button
            android:id="@+id/iniciarselecao"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/bowlby_one"
            android:onClick="abrirteladeselecao"
            android:text="Iniciar Jogo"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#029076" />

        <Button
            android:id="@+id/bthistorico"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/bowlby_one"
            android:onClick="embreve"
            android:text="Ultimos Jogos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#028F76" />

        <Button
            android:id="@+id/btcredits"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/bowlby_one"
            android:onClick="teladecreditos"
            android:text="Creditos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#3872BE" />

        <Button
            android:id="@+id/encerrarapp"
            android:layout_width="99dp"
            android:layout_height="49dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/bowlby_one"
            android:onClick="sair"
            android:text="Sair"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#E13225" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>