<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolhaseuJogo">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="598dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A3A3A3"
            android:gravity="center">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="282dp"
                android:layout_height="30dp"
                android:fontFamily="@font/bowlby_one"
                android:text="Escolha Seu Jogo:"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="334dp"
            android:layout_height="140dp"
            android:layout_marginVertical="20dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mega_button" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="333dp"
            android:layout_height="143dp"
            android:layout_marginVertical="20dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/botao_quina" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="333dp"
            android:layout_height="141dp"
            android:layout_marginVertical="20dp"
            android:background="#FFFFFF"
            android:onClick="embreve"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/quadra_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>